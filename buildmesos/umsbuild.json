{
  "id": "umsbuildcore1",
  "instances": 1,
  "cpus": 0.2,
  "mem": 300.0,
  "disk": 1000,
  "container": {
    "docker": {
      "type": "DOCKER",
      "image": "registry.thoughtworks.com:5000/dind",
      "network": "HOST"
    },
    "volumes": [
      {
        "containerPath": "/var/run/docker.sock",
        "hostPath": "/var/run/docker.sock",
        "mode": "RW"
      }
    ]
  },
  "env": {
    "BUILD": "git clone https://github.com/sjkyspa/javastandalone.git && cd javastandalone  && ./gradlew standaloneJar && ./gradlew docker && ./gradlew push"
  },
  "ports": [
    0
  ],
  "maxLaunchDelaySeconds": 36000
}
